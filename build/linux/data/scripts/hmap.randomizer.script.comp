#version 450 core

layout (local_size_x = 1, local_size_y = 1, local_size_z = 1) in;
layout (r32i, binding = 0) uniform image2D OutTexture;

void main() {
	ivec2 pos = ivec2(gl_GlobalInvocationID.xy);
	float in_val = imageLoad(OutTexture, pos).r;

	imageStore(OutTexture, pos, vec4(in_val + 1, 0.0, 0.0, 0.0));
}